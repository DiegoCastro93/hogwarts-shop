<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Custom logo configuration -->
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.svg</argument>
                <argument name="logo_width" xsi:type="number">100</argument>
                <argument name="logo_height" xsi:type="number">100</argument>
                <argument name="logo_alt" xsi:type="string">Logo Hogwarts Shop</argument>
            </arguments>
        </referenceBlock>
        <!-- Remove report.bugs, advanced-search-link, currency blocks -->
        <referenceBlock name="report.bugs" remove="true"/>
        <referenceBlock name="advanced-search-link" remove="true" />
        <referenceBlock name="currency" remove="true" />
        <!-- Create a new container for the minicart and search -->
        <referenceContainer name="header.panel">
            <container name="cartsearch.parent.container" htmlTag="div" htmlClass="cartsearch-parent" after="logo"/>
        </referenceContainer>
        <!-- Move minicart and search into the new container -->
        <move element="minicart" destination="cartsearch.parent.container"/>
        <move element="top.search" destination="cartsearch.parent.container"/>
    </body>
</page>
